<h1>Post List</h1>

 <table>
   <thead>
     <td>title</td>
     <td>content</td>
     <td>address</td>
     <td>category</td>
     <td>user</td>
     <td>action</td>

   </thead>
   <% @posts.each do |post| %>
     <tr>
       <td><%= post.title %></td>
       <td><%= post.content %></td>
       <td><%= post.address %></td>
       <td><%= "#{post.region&.name} #{post.province&.name} #{post.city&.name} #{post.barangay&.name} #{post.address}" %></td>
       <td><%= post.categories.pluck(:name).join(',') %></td>
       <td><%= post.user&.email %></td>
   <td>
    <%= link_to 'Show', user_post_path(post) %>
    <%= link_to 'Edit', edit_user_post_path(post) if user_signed_in? && post.user == current_user %>
    <%= button_to 'Delete', user_post_path(post), method: :delete if user_signed_in? && post.user == current_user %>
    </td>
     </tr>
   <% end %>
 </table>

 <%= paginate @posts %>
 
